	 <select id="readReply" resultType="CommentDTO">
  		SELECT
  		BOARD_SEQ,
  		RNO,
  		CONTENT,
  		WRITER,
  		FROM
  		MYREPLY
  		WHERE 
  		BOARD_SEQ = #{seq}
 	 </select>
 	 
 	 <insert id="InsertComment" parameterType="CommentDTO">
		INSERT INTO MYREPLY (
		BOARD_SEQ,
		CONTENT,
		WRITER
		) VALUES (
		(SELECT
		#{board_seq},
		#{content},
		#{writer}
		)
	</insert>


